/**
 * File:	clients/popcorn_proposal.ycp
 * Package:	Configuration of popcorn
 * Summary:	Proposal function dispatcher.
 * Authors:	Akshit Khurana <axitkhurana@gmail.com>
 *
 * $Id: popcorn_proposal.ycp 41350 2007-10-10 16:59:00Z dfiser $
 *
 * Proposal function dispatcher for popcorn configuration.
 * See source/installation/proposal/proposal-API.txt
 */

{

textdomain "popcorn";

import "Popcorn";
import "Progress";

/* The main () */
y2milestone("----------------------------------------");
y2milestone("Popcorn proposal started");

string func = (string) WFM::Args(0);
map param = (map) WFM::Args(1);
map ret = $[];

/* create a textual proposal */
if(func == "MakeProposal") {
    string proposal = "";
    string warning = nil;
    symbol warning_level = nil;
    boolean force_reset = param["force_reset"]:false;

    if(force_reset || !Popcorn::ProposalValid()) {
        Popcorn::SetProposalValid (true);
	boolean progress_orig = Progress::set (false);
	Popcorn::Read();
	Progress::set (progress_orig);
    }
    list sum = Popcorn::Summary();
    proposal = sum[0]:"";

    ret = $[
	"preformatted_proposal" : proposal,
	"warning_level" : warning_level,
	"warning" : warning,
    ];
}
/* run the module */
else if(func == "AskUser") {
    map stored = Popcorn::Export();
    symbol seq = (symbol) WFM::CallFunction("popcorn", [.propose]);
    if(seq != `next) Popcorn::Import(stored);
    y2debug("stored=%1",stored);
    y2debug("seq=%1",seq);
    ret = $[
	"workflow_sequence" : seq
    ];
}
/* create titles */
else if(func == "Description") {
    ret = $[
	/* Rich text title for Popcorn in proposals */
	"rich_text_title" : _("Popcorn"),
	/* Menu title for Popcorn in proposals */
	"menu_title" : _("&Popcorn"),
	"id" : "popcorn",
    ];
}
/* write the proposal */
else if(func == "Write") {
    Popcorn::Write();
}
/* unknown function */
else {
    y2error("unknown function: %1", func);
}

/* Finish */
y2debug("ret=%1",ret);
y2milestone("Popcorn proposal finished");
y2milestone("----------------------------------------");
return ret;

/* EOF */
}
